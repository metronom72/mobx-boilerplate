{
  "extends": "react",
  "globals": {
    "Promise": true
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "plugins": [
    "promise"
  ],
  "rules": {
    "indent": ["error", 2],
    "padded-blocks": ["off"],
    "space-before-function-paren": ["off"],
    "comma-dangle": ["error", "only-multiline"],
    "react/self-closing-comp": ["warn"],
    "promise/catch-or-return": ["off"],
    "promise/always-return": ["off"],
    "max-nested-callbacks": ["error", 4],
    "new-cap": ["off"],
    "prefer-reflect": ["off"],
    "no-nested-ternary": ["off"]
  }
}
