{
    "extends": [
        "tslint:recommended",
        "tslint-react",
        "tslint-config-prettier"
    ],
    "rulesDirectory": [
        "tslint-plugin-prettier"
    ],
    "rules": {
        "prettier": true,
        "interface-name": false,
        "max-classes-per-file": false,
        "max-line-length": [true, 120]
    },
    "linterOptions": {
        "exclude": [
            "./src/default.config.json",
            "./src/serviceWorker.ts",
            "./src/react-app-env.d.ts"
        ]
    }
}